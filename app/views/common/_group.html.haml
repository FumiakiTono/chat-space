= form_for @group do |f|
  = render partial: "common/error", locals: { error: @group.errors }
  .chat-group-form__field.clearfix
    .chat-group-form__field--left
      = f.label :グループ名, class: "group-form__label"
    .chat-group-form__field--right
      = f.text_field :name, class: "group-form", placeholder: "グループ名を入力してください"
  .chat-group-form__field.clearfix
    .chat-group-form__field--left
      = f.label :チャットメンバーを追加, class: "group-form__label"
    .chat-group-form__field--right
      .chat-group-form__search.clearfix
        %input.group-form{ placeholder: "追加したいユーザー名を入力してください", id: "group-users"}
      #user-search-result
  .chat-group-form__field.clearfix
    .chat-group-form__field--left
      = f.label :チャットメンバー, class: "group-form__label"
    .chat-group-form__field--right
      #chat-group-users
        .chat-group-user.clearfix{ id: "group-user-#{current_user.id}" }
          = current_user.name
          = f.hidden_field "user_ids][", value: current_user.id
  .chat-group-form__field.clearfix
    .chat-group-form__field--left
    .chat-group-form__field--right
      = f.submit "Save", class: "chat-group-form__action-btn"
